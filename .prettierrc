{
	"arrowParens": "always",
	"editorconfig": true,
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "css",
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
	"printWidth": 100,
	"proseWrap": "preserve",
	"quoteProps": "as-needed",
	"semi": true,
	"singleAttributePerLine": true,
	"singleQuote": true,
	"svelteSortOrder": "scripts-styles-options-markup",
	"svelteStrictMode": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"useTabs": true,

	"attributeGroups": ["$DEFAULT"],
	"attributeSort": "ASC"
}
